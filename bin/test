#!/bin/bash

set -e

echo `go version`

SCRIPT_DIR=`dirname $0`
cd ${SCRIPT_DIR}/..

echo "Go formatting..."
go fmt ./...

echo "Go vetting..."
go get -v golang.org/x/tools/cmd/vet
go vet ./...

echo "Go imports"
go get -v golang.org/x/tools/cmd/goimports
goimports -w .

echo "Recursive ginkgo... ${*:+(with parameter(s) }$*${*:+)}"
ginkgo -r --race --randomizeAllSpecs --failOnPending -cover $*
